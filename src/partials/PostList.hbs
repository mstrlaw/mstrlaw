{{#if (reverse lastPosts) }}
<section class="c-Timeline__wrapper">
  <ul class="c-Timeline">
    <li class="c-Timeline__container">
        <div class="c-Timeline__item">
          <a href="/posts" class="u-Highlight blue">More</a>
        </div>
    </li>
    {{#each lastPosts}}
      <li class="c-Timeline__container">
        <div class="c-Timeline__item">
          <a href="/{{ path }}" class="c-Timeline__itemTitle">
            {{ title }}
          </a>
          <time
            class="c-Timeline__itemDate"
            data-equaldate="true"
            datetime="{{publish_date}}"
            data-pubreadable="{{formatDate publish_date}}"
            data-pubtimeago="{{publish_date}}"
            data-updreadable="{{formatDate update_date}}"
            data-updtimeago="{{update_date}}"
          >
            {{ formatDate update_date }}
          </time>
        </div>
      </li>
    {{/each}}
  </ul>
</section>
{{/if}}
