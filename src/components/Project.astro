        (getMediaFormat(feat_image) === 'gif' ? (
          <div class="w-full h-40 object-cover rounded-lg z-20">
            <img
              src={feat_image}
              class="w-full h-40 object-cover rounded-lg z-20"
            />
          </div>
        ) : (
          <div class="w-full h-40 object-cover rounded-lg z-20">
            <Image
              src={feat_image}
              alt="A description of my image."
              class="w-full h-40 object-cover rounded-lg z-20"
            />
          </div>
        ))
    }
